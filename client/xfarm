@app.command()
def config():
    if not cmd_state.INITIAL_CONFIG_CALLED:
        InitialConfiguration(g.config).run()

@app.command()
def reset():
    print({
        "message": "reset"
    })

@app.command()
def start():
    print({
        "message": "start"
    })

@app.command()
def login():
    print({
        "message": "login"
    })

@app.command()
def init():
    print({
        "message": "init"
    })


if __name__ == "__main__":
    initial_setup()
    app()
